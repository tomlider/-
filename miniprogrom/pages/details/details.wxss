page {
  width: 100%;
  height: 100%;
}
.details {
  width: 100%;
  height: 100%;
  background-color: #ececec;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.details .bigimage {
  width: 100%;
}
.details .item {
  margin-top: 30rpx;
  background-color: #ececec;
  width: 95%;
}
.details .item .textbar {
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  padding-bottom: 40rpx;
}
.details .item .textbar .name {
  padding-left: 30rpx;
  font-size: 40rpx;
  font-weight: 800;
}
.details .item .textbar .price {
  padding-left: 50rpx;
  margin-top: 30rpx;
  font-size: 40rpx;
  font-weight: 800;
  color: red;
}
.details .item .textbar .jisuan {
  display: flex;
  padding-right: 20rpx;
  flex-direction: row-reverse;
}
.details .item .textbar .jisuan .addimg image {
  height: 45rpx;
  width: 45rpx;
}
.details .item .textbar .jisuan .number {
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 28rpx;
}
.details .item .textbar .sugge {
  padding-left: 30rpx;
  padding-bottom: 20rpx;
}
.details .item .textbar .sugge .suggeText {
  font-size: 30rpx;
  font-weight: 650;
  margin-bottom: 5rpx;
}
.details .item .textbar .sugge .suggItem {
  font-size: 30rpx;
}
.details .item .textbar .kouW {
  padding-left: 30rpx;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 5rpx;
}
.details .item .textbar .dBank {
  display: flex;
  flex-flow: wrap;
}
.details .item .textbar .dBank .kouX {
  padding-left: 30rpx;
  margin: 9rpx 15rpx;
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
  border-radius: 15rpx;
}
.details .item .textbar .dBank .activ {
  background-color: #33CCFF;
  font-size: 30rpx;
  border-radius: 15rpx;
  margin: 9rpx 15rpx;
  padding: 15rpx 30rpx;
}
.details .item .addTocart {
  margin: 50rpx  auto;
  margin-bottom: 50rpx;
  width: 75%;
  height: 65rpx;
  border-radius: 30rpx;
  background-color: #00BFFF;
  color: white;
  font-size: 35rpx;
  line-height: 65rpx;
  text-align: center;
}
